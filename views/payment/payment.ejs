<%- include("../partials/header")%>
<%- include("../partials/navbar")%>



<div class="container" style="margin-top:5rem;width:80vw;margin-bottom: 11rem;">

<form class="validated-form" action="/pay" method="POST" style="max-width:70%;margin:10px auto" novalidate>
    <h6 class="display-6">Add Your Payment Info</h6>
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter Your Name"  required>
        <div class="valid-feedback">
        Looks good!
        </div>
    </div>
    <div class="mb-3">
        <label for="card" class="form-label">Mobile number</label>
        <input type="number" class="form-control" name="phone" id="card" placeholder="Enter your 10 digit mobile number" required>
        <div class="valid-feedback">
        Looks good!
        </div>
    </div>
    <div class="mb-3">
        <!-- <label for="amount" class="form-label">Amount</label> -->
        <input type="hidden" name="amount" class="form-control" value="<%= amount %>" id="amount" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        </div>
        <div class="mb-3">
            <!-- <label for="email" class="form-label">Amount</label> -->
            <input type="hidden" name="email" class="form-control" value="<%= email %>" id="email" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            </div>

    <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <textarea class="form-control" name="address" id="address" cols="30" rows="2" required></textarea>
        <div class="valid-feedback">
            Looks good!
        </div>
        </div>
    
    <button type="submit" class="btn btn-success">Proceed</button>
    </form>
        
   
</div>


<%- include("../partials/footer")%>